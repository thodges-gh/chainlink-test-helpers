{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "semicolon": [true, "never"],
    "quotemark": [true, "single", "avoid-escape", "avoid-template"],
    "trailing-comma": [true, "never"],
    "arrow-parens": [true, "ban-single-arg-parens"],
    "no-bitwise": false
  },
  "rulesDirectory": [],
  "linterOptions": {
    "exclude": [
      "node_modules/**",
      "**/node_modules/**",
      "vendor/**"
    ]
  }
}
